    color: var(--text-soft);
    border-radius: 999px;
}

/* NOTIFICATION CARDS */
.notification-list {
    display: flex;
    flex-direction: column;
    gap: 8px;
}
.notification-item {
    background: var(--bg-card-soft);
    border-radius: var(--radius-md);
    padding: 8px 10px;
    border: 1px solid rgba(255, 255, 255, 0.05);
    font-size: 12px;
}
.notification-meta {
    display: flex;
    justify-content: space-between;
    font-size: 10px;
    color: var(--text-soft);
    margin-top: 4px;
}

/* REPORTS TABS */
.tab-header {
    display: inline-flex;
    border-radius: 999px;
    padding: 3px;
    background: rgba(255, 255, 255, 0.04);
    margin-bottom: 10px;
}
.tab-pill {
    padding: 4px 12px;
    font-size: 11px;
    border-radius: 999px;
    cursor: pointer;
    color: var(--text-soft);
}
.tab-pill.active {
    background: rgba(227, 6, 19, 0.18);
    color: #ffb3b7;
}

/* FORMS INLINE */
.inline-filters {
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
    font-size: 11px;
    margin-bottom: 8px;
}
.inline-filters select,
.inline-filters input {
