}
.pill-filter.active {
    border-color: rgba(227, 6, 19, 0.7);
    background: rgba(227, 6, 19, 0.16);
    color: #ffb3b7;
}

/* TABLES */
.table-wrapper {
    border-radius: var(--radius-md);
    overflow: hidden;
    border: 1px solid rgba(255, 255, 255, 0.05);
    background: var(--bg-card-soft);
}
