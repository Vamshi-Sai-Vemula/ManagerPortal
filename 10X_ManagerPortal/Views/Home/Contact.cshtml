<style>
:root {
    --bg-dark: #0d0d0f;
    --bg-sidebar: #111218;
    --bg-card: #1b1d26;
    --bg-card-soft: #212432;
    --accent: #e30613; /* 10X red */
    --accent-soft: rgba(227, 6, 19, 0.1);
    --border-subtle: #2b2e3f;
    --text-main: #f6f6f9;
    --text-muted: #9ca0b5;
    --text-soft: #6c7187;
    --radius-lg: 16px;
    --radius-md: 10px;
    --radius-sm: 6px;
    --shadow-soft: 0 14px 30px rgba(0, 0, 0, 0.45);
    --transition-fast: 0.18s ease-out;
    --transition-med: 0.25s ease;
}

/* Global */
* {
    box-sizing: border-box;
}
body {
    margin: 0;
    font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
    background: radial-gradient(circle at top left, #1c1f2e 0, #050509 55%, #000 100%);
    color: var(--text-main);
}
a { color: inherit; text-decoration: none; }
button { font-family: inherit; }

/* LOGIN SCREEN */
#login-screen {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 24px;
}
.login-card {
    width: 100%;
    max-width: 420px;
    background: linear-gradient(145deg, #151725, #101119);
    border-radius: 20px;
    padding: 32px 28px 26px;
    box-shadow: var(--shadow-soft);
    border: 1px solid rgba(255, 255, 255, 0.04);
}
.login-logo {
    display: flex;
    align-items: center;
    gap: 10px;
    margin-bottom: 24px;
}
.logo-circle {
    width: 40px;
    height: 40px;
    border-radius: 14px;
    background: radial-gradient(circle at 30% 0, #ff5a5a, #e30613);
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 800;
    letter-spacing: 1px;
}
.logo-text-main {
    font-size: 18px;
    font-weight: 700;
}
.logo-text-sub {
    font-size: 12px;
    color: var(--text-soft);
    margin-top: 2px;
}
.login-title {
    font-size: 22px;
    font-weight: 600;
    margin-bottom: 4px;
}
.login-subtitle {
    font-size: 13px;
    color: var(--text-soft);
    margin-bottom: 22px;
}
.form-group {
    margin-bottom: 16px;
}
.form-group label {
    display: block;
    font-size: 12px;
    color: var(--text-muted);
    margin-bottom: 6px;
}
.form-input {
    width: 100%;
    padding: 10px 11px;
    border-radius: 10px;
    border: 1px solid var(--border-subtle);
    background: #10111a;
    color: var(--text-main);
    font-size: 13px;
    outline: none;
    transition: border var(--transition-fast), box-shadow var(--transition-fast), background var(--transition-fast);
}
.form-input:focus {
    border-color: var(--accent);
    box-shadow: 0 0 0 1px rgba(227, 6, 19, 0.6);
    background: #0c0d14;
}
.login-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 18px;
    margin-top: 6px;
}
.checkbox-row {
    display: flex;
    align-items: center;
    gap: 6px;
    font-size: 12px;
    color: var(--text-soft);
}
.login-forgot {
    font-size: 12px;
    color: var(--accent-soft);
}
.login-forgot span {
    color: #f46c74;
    cursor: pointer;
}
.btn-primary {
    width: 100%;
    padding: 11px 16px;
    border-radius: 999px;
    border: none;
    outline: none;
    background: linear-gradient(135deg, #ff5151, #e30613);
    color: #fff;
    font-weight: 600;
    font-size: 14px;
    cursor: pointer;
    box-shadow: 0 8px 22px rgba(227, 6, 19, 0.5);
    transition: transform var(--transition-fast), box-shadow var(--transition-fast), filter var(--transition-fast);
}
.btn-primary:hover {
    transform: translateY(-1px);
    filter: brightness(1.05);
    box-shadow: 0 12px 26px rgba(227, 6, 19, 0.7);
}
.login-footer {
    margin-top: 14px;
    font-size: 11px;
    color: var(--text-soft);
    text-align: center;
}

/* APP SHELL */
#app-shell {
    display: none;
    min-height: 100vh;
}
.app-layout {
    display: flex;
}

/* SIDEBAR */
.sidebar {
    width: 250px;
    background: linear-gradient(180deg, #151725 0%, #090910 100%);
    border-right: 1px solid rgba(255, 255, 255, 0.03);
    padding: 18px 14px;
    display: flex;
    flex-direction: column;
    position: sticky;
    top: 0;
    height: 100vh;
}
.sidebar-header {
    display: flex;
    align-items: center;
    gap: 10px;
    padding: 0 6px 10px;
    border-bottom: 1px solid rgba(255, 255, 255, 0.03);
    margin-bottom: 10px;
}
.sidebar-title {
    font-size: 15px;
    font-weight: 600;
}
.sidebar-badge {
    font-size: 10px;
    color: var(--text-soft);
    border-radius: 999px;
    border: 1px solid rgba(255, 255, 255, 0.08);
    padding: 1px 8px;
}
.nav-section-title {
    font-size: 11px;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    color: var(--text-soft);
    margin: 14px 6px 4px;
}
.nav-link {
    display: flex;
    align-items: center;
    gap: 10px;
    padding: 8px 10px;
    margin: 3px 4px;
    font-size: 13px;
    color: var(--text-muted);
    border-radius: 10px;
    cursor: pointer;
    transition: background var(--transition-fast), color var(--transition-fast), transform var(--transition-fast);
}
.nav-link .nav-icon {
    width: 22px;
    text-align: center;
    font-size: 15px;
}
.nav-link:hover {
    background: rgba(255, 255, 255, 0.05);
    color: var(--text-main);
    transform: translateX(1px);
}
.nav-link.active {
    background: linear-gradient(135deg, rgba(227, 6, 19, 0.2), rgba(227, 6, 19, 0.35));
    color: #fff;
}
.nav-link.active .nav-icon {
    color: #ffb3b7;
}
.nav-pill {
    font-size: 10px;
    border-radius: 999px;
    padding: 1px 8px;
    background: rgba(255, 255, 255, 0.05);
    margin-left: auto;
}
.sidebar-footer {
    margin-top: auto;
    padding: 10px 6px 0;
    border-top: 1px solid rgba(255, 255, 255, 0.05);
    font-size: 11px;
    color: var(--text-soft);
}

/* TOPBAR + CONTENT */
.main-area {
    flex: 1;
    display: flex;
    flex-direction: column;
    min-height: 100vh;
}
.topbar {
    height: 54px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0 18px;
    backdrop-filter: blur(26px);
    background: linear-gradient(90deg, rgba(5, 5, 12, 0.92), rgba(19, 19, 29, 0.92));
    border-bottom: 1px solid rgba(255, 255, 255, 0.04);
    position: sticky;
    top: 0;
    z-index: 10;
}
.topbar-left {
    display: flex;
    align-items: center;
    gap: 12px;
}
.topbar-title {
    font-size: 16px;
    font-weight: 600;
}
.topbar-subtitle {
    font-size: 11px;
    color: var(--text-soft);
}
.topbar-chip {
    font-size: 10px;
    border-radius: 999px;
    padding: 2px 8px;
    background: rgba(227, 6, 19, 0.12);
    color: #ff8c92;
}
.topbar-right {
    display: flex;
    align-items: center;
    gap: 10px;
}
.search-box {
    display: flex;
    align-items: center;
    gap: 6px;
    padding: 6px 10px;
    border-radius: 999px;
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid rgba(255, 255, 255, 0.04);
    font-size: 12px;
    color: var(--text-soft);
}
.search-input {
    border: none;
    background: transparent;
    color: var(--text-main);
    outline: none;
    font-size: 12px;
    width: 130px;
}
.icon-pill {
    width: 26px;
    height: 26px;
    border-radius: 999px;
    border: 1px solid rgba(255, 255, 255, 0.12);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 14px;
    cursor: pointer;
}
.icon-pill.alert {
    border-color: rgba(227, 6, 19, 0.6);
}
.user-avatar {
    display: flex;
    align-items: center;
    gap: 8px;
    padding: 4px 8px;
    border-radius: 999px;
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid rgba(255, 255, 255, 0.08);
    cursor: pointer;
}
.user-circle {
    width: 26px;
    height: 26px;
    border-radius: 999px;
    background: linear-gradient(145deg, #ff7272, #e30613);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 13px;
    font-weight: 700;
}
.user-meta {
    display: flex;
    flex-direction: column;
}
.user-name {
    font-size: 11px;
}
.user-role {
    font-size: 10px;
    color: var(--text-soft);
}

/* PAGE CONTAINER */
.content {
    padding: 18px;
    min-height: calc(100vh - 54px);
}
.page {
    display: none;
}
.page.active {
    display: block;
}

/* CARDS & GRIDS */
.card-grid {
    display: grid;
    grid-template-columns: repeat(4, minmax(0, 1fr));
    gap: 14px;
    margin-bottom: 18px;
}
.card {
    background: var(--bg-card);
    border-radius: var(--radius-lg);
    padding: 14px 14px 12px;
    box-shadow: 0 12px 28px rgba(0, 0, 0, 0.45);
    border: 1px solid rgba(255, 255, 255, 0.04);
}
.card-header {
    display: flex;
    justify-content: space-between;
    font-size: 11px;
    color: var(--text-soft);
    margin-bottom: 4px;
}
.card-title {
    font-size: 12px;
    color: var(--text-muted);
}
.card-kpi {
    font-size: 18px;
    font-weight: 600;
    margin: 2px 0;
}
.card-kpi span.trend {
    font-size: 11px;
    color: #5dd39e;
    margin-left: 6px;
}
.card-kpi span.trend-down {
    color: #ff8c92;
}
.card-footer {
    font-size: 11px;
    color: var(--text-soft);
}
.card-footer a {
    color: #ffb3b7;
    cursor: pointer;
}

/* Mini chart placeholder */
.chart-placeholder {
    margin-top: 6px;
    height: 36px;
    border-radius: 10px;
    background: linear-gradient(90deg, rgba(227, 6, 19, 0.07), rgba(255, 255, 255, 0.04));
}

/* LAYOUT SECTIONS */
.section-grid {
    display: grid;
    grid-template-columns: 2fr 1.3fr;
    gap: 16px;
}
.section-card {
    background: var(--bg-card);
    border-radius: var(--radius-lg);
    padding: 14px;
    border: 1px solid rgba(255, 255, 255, 0.05);
}
.section-title-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 8px;
}
.section-title {
    font-size: 14px;
    font-weight: 500;
}
.section-subtle {
    font-size: 11px;
    color: var(--text-soft);
}
.pill-filter-group {
