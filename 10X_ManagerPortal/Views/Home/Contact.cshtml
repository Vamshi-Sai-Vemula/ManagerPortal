    border-bottom: 1px solid rgba(255, 255, 255, 0.04);
}
.table th {
    font-weight: 500;
    color: var(--text-muted);
    text-align: left;
}
.table tbody tr:hover {
    background: rgba(255, 255, 255, 0.03);
    cursor: pointer;
}
.badge {
    font-size: 10px;
    border-radius: 999px;
    padding: 2px 8px;
    display: inline-block;
}
.badge-pending {
