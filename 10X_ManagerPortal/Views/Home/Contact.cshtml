    color: #ffe6a3;
}

/* BUTTONS */
.btn {
    padding: 6px 10px;
    border-radius: 999px;
    border: none;
    font-size: 11px;
    cursor: pointer;
    font-weight: 500;
}
.btn-accent {
    background: linear-gradient(135deg, #ff5050, #e30613);
    color: #fff;
}
.btn-outline {
    background: transparent;
    border: 1px solid rgba(255, 255, 255, 0.18);
    color: var(--text-muted);
}
.btn-ghost {
